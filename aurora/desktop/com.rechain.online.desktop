[Desktop Entry]
Type=Application
Name=REChain
Comment=Secure Matrix Messenger for Aurora OS
GenericName=Secure Matrix Client
Keywords=messaging;matrix;chat;secure;encrypted;e2ee;
Exec=rechainonline %u
Icon=com.rechain.online
Terminal=false
Categories=Network;Chat;InstantMessaging;Security;
MimeType=x-scheme-handler/matrix;

# Aurora OS specific
X-Aurora-Desktop-File=com.rechain.online.desktop
X-Aurora-Application-Name=REChain
X-Aurora-Application-Icon=com.rechain.online

# Actions
Actions=new-chat;

[New Chat Action]
Name=New Chat
Exec=rechainonline --new-chat
Categories=Network;

# Startup notification
StartupNotify=true
StartupWMClass=rechainonline

# Preferences
X-GNOME-Autostart-Enabled=true
X-GNOME-Autostart-Delay=5

# URL handling
X-UrlSchemeHandler=matrix=rechainonline.desktop

